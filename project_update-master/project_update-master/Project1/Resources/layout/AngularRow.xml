               />
                 
                 
                     <ImageView
                android:src="@drawable/ic_delete"
                android:layout_width="40dp"
                    android:id="@+id/deleteBtn"
                 android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                android:layout_height="40dp"/>

            </RelativeLayout>
       

        </LinearLayout>



