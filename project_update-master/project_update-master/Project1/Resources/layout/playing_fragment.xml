<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gradEnd"
    android:layout_height="match_parent"
    android:orientation="vertical">




        <ImageView
            android:id="@id/back"
            android:src="@drawable/back2"
            android:layout_width="50dp"
            android:layout_height="40dp"/>






    <TextView
        android:textStyle="bold"
        android:fontFamily="@font/doan"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="80dp"
        android:text="TIME REMAINING: 10:00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/doan"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:fontFamily="@font/doan"
        android:layout_marginStart="10dp"
        android:padding="20dp"
        android:text="@string/intro_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnPlay"
        android:layout_margin="8dp"
        android:background="@drawable/button_2"
        android:text="PLAY"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnScore"
        android:layout_margin="8dp"
        android:background="@drawable/button_1"
        android:layout_gravity="center"
        android:text="SCORE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="170dp"
        android:layout_height="wrap_content" />


    
        <ImageView
            android:id="@+id/video"
            android:src="@drawable/video1"
            
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="60dp"/>


    <LinearLayout
        android:layout_below="@+id/btnGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seekBar"
            android:max="3"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtMode"
            android:layout_gravity="center"
            android:text="EASY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:lottie_rawRes="@raw/world"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="XmlNamespace" 

      />


</LinearLayout>